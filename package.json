{
  "name": "joltik",
  "version": "0.0.2",
  "description": "A micro VDOM library for learning purposes",
  "main": "dist/index.js",
  "scripts": {
    "phoenix": "rm -rf node_modules package-lock.json && npm install",
    "test": "jest",
    "build": "parcel build src/index.js",
    "start": "parcel examples/index.html",
    "commit": "git-cz",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/d4nidev/joltik.git"
  },
  "author": "Daniel de la Cruz <mail@danidev.es>",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-plugin-transform-react-jsx": "6.24.1",
    "babel-preset-env": "1.7.0",
    "commitizen": "3.0.7",
    "cz-conventional-changelog": "2.1.0",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "lint-staged": "8.1.4",
    "parcel-bundler": "1.11.0",
    "prettier": "1.16.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
